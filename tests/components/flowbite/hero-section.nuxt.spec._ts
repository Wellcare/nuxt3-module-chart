// internal/flowbite/hero-section

import { it, expect, describe } from 'vitest'
import { renderSuspended } from '@nuxt/test-utils/runtime'
import { screen } from '@testing-library/vue'
import HeroSection from '../../../src/runtime/components/internal/hero-section/default.vue'

describe('HeroSection', async () => {
    it('renders with provided props', async () => {
        const blocks = ['title']
        const backgroundImage = {
            src: 'https://storage.googleapis.com/emr-sandbox/64e5812f6e317437a4bdc246/cl1.jpg',
            alt: '12A1',
        }

        const title = 'Sức khỏe'
        const subTitle = 'Là Tài sản quý giá nhất'
        const seoTitleTag = 'h1'

        await renderSuspended(HeroSection, {
            props: {
                blocks,
                backgroundImage,
                title,
                subTitle,
                seoTitleTag,
            },
        })

        // Assert presence of provided props
        expect(screen.getByText(title)).toBeDefined()
        expect(screen.getByText(subTitle)).toBeDefined()
    })
})
